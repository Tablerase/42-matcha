{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "rootDir": ".",
    "outDir": "./dist",
    "baseUrl": ".",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "paths": {
      "@models/*": ["src/models/*"],
      // "@controllers/*": ["src/controllers/*"],
      "@views/*": ["src/views/*"],
      "@routes/*": ["src/routes/*"],
      "@interfaces/*": ["src/interfaces/*"],
      "@utils/*": ["src/utils/*"]
    }
  },
  "include": ["src/**/*", "settings.ts"],
  "exclude": ["node_modules", "dist"]
}
